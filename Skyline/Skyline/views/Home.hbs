    </div>


    <nav>
        <div class="logo">
            <img src="https://cdn3.shopvii.com/759/605/Skyline_New_Logo.svg" alt="" style="position:relative;top:-30px">
        </div>
        <div class="mini-logo">
            <img src="https://cdn3.shopvii.com/759/605/Skyline_New_Logo.svg" alt="">
        </div>
        <ul>
            {{#each package}}
            <li><a href="#{{this.id}}"><i class="fa fa-folder"></i> <em>{{this.package.packageName}}</em></a></li>
            {{/each}}
           <li><a href="#3"><i class="fa fa-folder"></i> <em>Terms and Conditions</em></a></li>
        
            {{#ifCond this.user null}}
            
            <li><a href="#4"><i class="fa fa-user"></i> <em>Your Packages</em></a></li>
            <li><a href="#5"><i class="fa fa-folder"></i> <em>All Packages</em></a></li>
            <li>
            <a  onclick=logout()>
            <i class="fa fa-download" style=" transform: rotate(270deg);"></i> 
            <em>Logout</em></a>
            </li>
           
            {{else}}
            <li><a href="#4"><i class="fa fa-folder"></i> <em>All Packages</em></a></li>
            <li>
            <a  onclick=login()>
            <i class="fa fa-download" style=" transform: rotate(90deg);"></i> 
            <em>Login/Register</em></a>
            </li>
            {{/ifCond}}
    </ul>
    </nav>








       





    <div class="slides">


        {{#each package}}
        <div class="slide" id="{{this.id}}">
            <div class="content third-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="second-section">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="left-image">
                                            <img src="{{this.package.filepath}}" alt="second service" style="height:300px;object-fit:cover">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="right-content">
                                            <h2 >{{this.package.packageName}}</h2>
                                            <p >{{this.package.packageRemarks}}</p>
                                              <form id="buy-form">                                           
                                                  <div class="main-btn">
                                                  <input type="button" value="BUY" onclick="submitBuy('{{this.package._id}}')" 
                                                    style="border:none;outline:none;background:transparent;width:200px">
                                                   </div>
                                              </form>
                                            </div>
                                         </div>
                                        </div>
                                       </div>
                                     </div>



                        <div class="second-section">
                            <div class="container-fluid">
                                <h2>Package Details</h2>
                                <div class="row">
                                    {{#each this.package.Element}}
                                    <div class="col-md-4 col-sm-6">
                                        <div class="item">
                                            <div class="thumb">
                                             <a href="{{this.element.filepath}}" data-lightbox="image-1">
                                                <div class="hover-effect">
                                                     <div class="hover-content">
                                                        <h2>{{this.element.name}}</h2>
                                                        <p>{{this.element.remarks}}</p>
                                                    </div>
                                                </div>
                                                
                                                </a>
                                                <div class="image">
                                                    <img src="{{this.element.filepath}}" class="elementImage">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
               </div>
              {{/each}}




                <div class="slide" id="3">
                  <div class="content fourth-content">
                    <div class="container-fluid">
                    <p style="font-size:30px;font-weight:bold;color:white;text-decoration: underline;
                    text-transform: uppercase;margin-bottom:45px">Terms and Conditions</p>
                    {{#each terms}}
                    <h4 style="font-size:15px;font-weight:bold;color:white;
                    text-align:left;margin-bottom:20px">
                    <span style="font-size:15px;font-weight:bold;color:white;margin-right:10px;">
                     {{this.index}}.</span>
                     {{this.terms}}</h4>
                    {{/each}}
                   </div>
                  </div>
                 </div>





          <div class="slide" id="4">
             <div class="content fourth-content">
                    <div class="container-fluid">
                          <div class="row">
                            {{#each userpackage}}
                            <div class="col-md-4 col-sm-6"  onclick="window.location.href = 'http://65.1.131.197:3000/api/user/show_user_package/{{this.id}}';">
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-effect">
                                            <div class="hover-content">
                                                <h2>{{this.package.packageName}}</h2>
                                               <p>{{this.package.packageRemarks}}</p>
                                            </div>
                                        </div>
                                        </a>
                                        <div class="image">
                                            <img src="{{this.package.filepath}}" class="elementImage">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

       



        {{#ifCond this.user null}}
          <div class="slide" id="5">
              {{else}}
                <div class="slide" id="4">
                 {{/ifCond}}
                <div class="content fourth-content">
                    <div class="container-fluid">
                          <div class="row">
                            {{#each packages}}
                            <div class="col-md-4 col-sm-6" onclick="window.location.href = 'http://65.1.131.197:3000/api/package/show_package/{{this._id}}';">
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-effect">
                                            <div class="hover-content">
                                                <h2>{{this.packageName}}</h2>
                                               <p>{{this.packageRemarks}}</p>
                                            </div>
                                        </div>
                                        </a>
                                        <div class="image">
                                            <img src="{{this.filepath}}" class="elementImage">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </body>


