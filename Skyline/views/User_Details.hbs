{{> _header}}
<style>
  .packageCard {
    margin: 30px auto;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 5px 5px 30px 7px rgba(0, 0, 0, 0.25), -5px -5px 30px 7px rgba(0, 0, 0, 0.22);
    cursor: pointer;
    transition: 0.4s;
    margin-bottom: 40px
