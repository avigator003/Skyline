    function updatePackage(id) {

      var frm = $('#formData');
      console.log(frm.serialize(), "hey")
      $.post(`/api/sellvoucher/sell_voucher_update/${id}`, frm.serialize(), function (data) {

        console.log("data", data)
      });

    }
  </script>

</body>

</html>